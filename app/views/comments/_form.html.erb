<div class="panel panel-default" style="width:1200px; margin-top:10px;
margin-left: auto; margin-right: auto">
<div class="panel-heading">
  <h3>Escribe un Comentario</h3>
</div>
<p>
  <div style="text-align: justify; margin: 20px">
  <%= bootstrap_form_for [ @entry, @comment ] do |f| %>
    <p>
      <%= f.text_field :author_name %>
    </p>
    <p>
      <%= f.text_area :body %>
    </p>
    <p>
      <%= f.submit 'Submit' %>
    </p>
  <% end %>
</div>
</p>
</div>
