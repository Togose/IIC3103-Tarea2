<div class="panel panel-default" style="width:1200px; margin-top:50px;
margin-left: auto; margin-right: auto">

  <div class="panel-heading">
    <h2><%= @entry.title %></h2>
    <h6> Fecha de Publicación: <%= @entry.created_at.strftime("%H:%M:%S - %d/%m/%Y")%></h6>
  </div>

  <div id ="wrapper_show">


      <div style="text-align: justify; margin: 20px">
        <%= @entry.subhead %>
      </div>



      <div style="text-align: justify; margin: 20px">
        <%= @entry.body %>
      </div>


  </div>

  <div style="margin-left: 20px">
    <p>
    <%= button_to "Editar Noticia", edit_entry_path(@entry),
    class: "btn btn-primary", :method => "get"%>
    </p>
    <p>
    <%= button_to "Borrar Noticia", entry_path(@entry),
      class: "btn btn-primary", method: :delete,
        data: {confirm: "¿Seguro que quieres borrar esta Noticia?"}%>
    </p>
    <p>
    <%= button_to 'Volver', entries_path, :method => "get",
      class: "btn btn-primary" %>
    </p>
  </div>

</div>



<%= render partial: 'comments/form' %>
<%= render partial: 'entries/comment', collection: @entry.comments.reverse %>
