<h1>Noticias</h1>

<ul id="entries">
  <% @entries.each do |entry| %>
    <li>
      <div class="panel panel-default" style="width:1200px; margin-top:50px;
      margin-left: auto; margin-right: auto">

        <div class="panel-heading">
          <h2><%= link_to entry.title, entry_path(entry),
          class: 'entry_title', id: "entry_#{entry.id}" %></h2>
          <h6> Fecha de Publicaci√≥n: <%= entry.created_at.strftime("%H:%M:%S - %d/%m/%Y")%></h6>
        </div>

        <div style="text-align: justify; margin: 20px">
          <%= entry.subhead %>
        </div>

        <div style="text-align: justify; margin: 20px">
          <%= entry.body %>
        </div>

      </div>
    </li>
  <% end %>
</ul>

<div style = "margin-left: 140px; margin-top:50px;">
  <%= button_to "Crear Nueva Noticia", new_entry_path, class: "btn btn-primary",
  :method => "get" %>
</div>
